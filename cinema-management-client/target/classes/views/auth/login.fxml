<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.cinema.controllers.auth.LoginController" prefWidth="480" prefHeight="680" style="-fx-background-color: #0f0f1a;" stylesheets="/styles/login.css">

    <children>
        <VBox alignment="CENTER" spacing="32" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">

            <!-- Logo + App Name -->
            <VBox alignment="CENTER" spacing="16" VBox.vgrow="ALWAYS">
                <Label text="CINEMA PRO" styleClass="app-name-label" style="-fx-text-fill: #ffffff; -fx-font-size: 28px; -fx-font-weight: bold;"/>

                <Label text="Đăng nhập bằng email" style="-fx-text-fill: #888899; -fx-font-size: 14px;"/>
            </VBox>


            <!-- Form Container -->
            <VBox spacing="20" alignment="CENTER" style="-fx-background-color: #1a1a2e; -fx-background-radius: 20; -fx-padding: 40;" maxWidth="380" VBox.vgrow="ALWAYS">

                <!-- Email Field -->
                <StackPane>
                    <TextField fx:id="emailField" promptText="Nhập email của bạn" prefHeight="50" styleClass="text-field-icon"/>
                    <FontIcon iconLiteral="fas-envelope" iconSize="18" iconColor="white" mouseTransparent="true" StackPane.alignment="CENTER_LEFT">
                        <StackPane.margin>
                            <Insets left="15"/>
                        </StackPane.margin>
                    </FontIcon>
                </StackPane>

                <!-- Password -->
                <StackPane>
                    <PasswordField fx:id="passwordField" promptText="Nhập mật khẩu" prefHeight="50" styleClass="text-field-icon"/>
                    <FontIcon iconLiteral="fas-lock" iconSize="18" iconColor="white" mouseTransparent="true" StackPane.alignment="CENTER_LEFT">
                        <StackPane.margin>
                            <Insets left="15"/>
                        </StackPane.margin>
                    </FontIcon>
                </StackPane>

                <!-- Error Message -->
                <Label fx:id="errorLabel" text="" textFill="#ff4466" visible="false" wrapText="true" alignment="CENTER" style="-fx-font-size: 13px; -fx-padding: 8 0;"/>

                <!-- Login Button -->
                <Button fx:id="loginButton" text="ĐĂNG NHẬP" prefHeight="52" prefWidth="Infinity" styleClass="login-button-primary" onAction="#handleLogin">
                    <font>
                        <Font size="16" name="System Bold"/>
                    </font>
                </Button>


                <!-- Forgot + Register Links -->
                <HBox alignment="CENTER" spacing="30" style="-fx-padding: 10 0 0 0;">
                    <Hyperlink text="Quên mật khẩu?" styleClass="hyperlink-flat" onAction="#handleForgotPassword"/>
                    <Label text="•" style="-fx-text-fill: #555;"/>
                    <Hyperlink text="Tạo tài khoản mới" styleClass="hyperlink-flat" onAction="#handleRegister"/>
                </HBox>

            </VBox>

            <!-- Footer -->
            <Label text="© 2025 Cinema Pro - Phần mềm quản lý rạp phim" style="-fx-text-fill: #444455; -fx-font-size: 11px;" VBox.vgrow="ALWAYS"/>

        </VBox>
    </children>

</AnchorPane>